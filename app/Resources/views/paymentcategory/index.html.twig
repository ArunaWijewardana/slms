{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Payment Categories'|trans }}</h1>

    <ul>
        <a href="{{ path('paymentcategory_new') }}" class="btn btn-success">{{ 'Create a new Payment Category'|trans }}</a>
    </ul>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Title'|trans }}</th>
                <th>{{ 'Description'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for paymentCategory in paymentCategories %}
            <tr>
                <td><a href="{{ path('paymentcategory_show', { 'id': paymentCategory.id }) }}">{{ paymentCategory.id }}</a></td>
                <td>{{ paymentCategory.title }}</td>
                <td>{{ paymentCategory.description }}</td>
                <td>
                    <a href="{{ path('paymentcategory_show', { 'id': paymentCategory.id }) }}" class="btn btn-success">{{ 'View'|trans }}</a>
                    <a href="{{ path('paymentcategory_edit', { 'id': paymentCategory.id }) }}" class="btn btn-secondary">{{ 'Edit'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
