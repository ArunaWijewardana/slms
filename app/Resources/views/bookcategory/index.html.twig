{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Book Categories'|trans }}</h1>

    <ul>
        <a href="{{ path('bookcategory_new') }}" class="btn btn-success">{{ 'Create a new Book Category'|trans }}</a>
    </ul>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Title'|trans }}</th>
                <th>{{ 'Description'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for bookCategory in bookCategories %}
            <tr>
                <td><a href="{{ path('bookcategory_show', { 'id': bookCategory.id }) }}">{{ bookCategory.id }}</a></td>
                <td>{{ bookCategory.title }}</td>
                <td>{{ bookCategory.description }}</td>
                <td>
                    <a href="{{ path('bookcategory_show', { 'id': bookCategory.id }) }}" class="btn btn-success">{{ 'View'|trans }}</a>
                    <a href="{{ path('bookcategory_edit', { 'id': bookCategory.id }) }}" class="btn btn-secondary">{{ 'Edit'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
