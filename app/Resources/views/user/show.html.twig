{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'User'|trans }}</h1>

    <ul>
        <a href="{{ path('user_index') }}" class="btn btn-secondary">{{ 'Back to the list'|trans }}</a>
        <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-success">{{ 'Edit'|trans }}</a>
    </ul>

    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Username'|trans }}</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>{{ 'User Category'|trans }}</th>
                <td>{{ user.userCategory.title }}</td>
            </tr>
            <tr>
                <th>{{ 'First Name'|trans }}</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>{{ 'Last Name'|trans }}</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>{{ 'Email'|trans }}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{ 'Personnel Code'|trans }}</th>
                <td>{{ user.identificationNumber }}</td>
            </tr>
            <tr>
                <th>{{ 'Address line 1'|trans }}</th>
                <td>{{ user.address1 }}</td>
            </tr>
            <tr>
                <th>{{ 'Address line 2'|trans }}</th>
                <td>{{ user.address2 }}</td>
            </tr>
            <tr>
                <th>{{ 'City'|trans }}</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>{{ 'Zip Code'|trans }}</th>
                <td>{{ user.zipCode }}</td>
            </tr>
            <tr>
                <th>{{ 'Phone'|trans }}</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>{{ 'Date of Birth'|trans }}</th>
                <td>{% if user.dateOfBirth %}{{ user.dateOfBirth|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{{ 'Description'|trans }}</th>
                <td>{{ user.description }}</td>
            </tr>
            <tr>
                <th>{{ 'Status'|trans }}</th>
                <td>{{ user.status }}</td>
            </tr>
            <tr>
                <th>{{ 'Created at'|trans }}</th>
                <td>{{ user.createdAt|date }}</td>
            </tr>
            <tr>
                <th>{{ 'Modified at'|trans }}</th>
                <td>{{ user.modifiedAt|date }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
            {{ form_start(delete_form) }}
                <input type="submit" value="{{ 'Delete'|trans }}" class="btn btn-danger">
            {{ form_end(delete_form) }}
    </ul>
{% endblock %}
