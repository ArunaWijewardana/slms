{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Books'|trans }}</h1>

    <ul>
        <a href="{{ path('book_new') }}" class="btn btn-success">{{ 'Create a new Book'|trans }}</a>
    </ul>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Title'|trans }}</th>
                <th>{{ 'Author'|trans }}</th>
                <th>{{ 'Publishing Year'|trans }}</th>
                <th>{{ 'Publishing Place'|trans }}</th>
                <th>{{ 'Quantity'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td><a href="{{ path('book_show', { 'id': book.id }) }}">{{ book.id }}</a></td>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{% if book.publishingYear %}{{ book.publishingYear|date('Y-m-d') }}{% endif %}</td>
                <td>{{ book.publishingPlace }}</td>
                <td>{{ book.quantity }}</td>
                <td>
                    <a href="{{ path('book_show', { 'id': book.id }) }}" class="btn btn-success">{{ 'View'|trans }}</a>
                    <a href="{{ path('book_edit', { 'id': book.id }) }}" class="btn btn-secondary">{{ 'Edit'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
