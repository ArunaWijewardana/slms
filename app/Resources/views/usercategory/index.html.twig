{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'User Categories'|trans }}</h1>

    <ul>
        <a href="{{ path('usercategory_new') }}" class="btn btn-success">{{ 'Create a new User Category'|trans }}</a>
    </ul>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Title'|trans }}</th>
                <th>{{ 'Description'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for userCategory in userCategories %}
            <tr>
                <td><a href="{{ path('usercategory_show', { 'id': userCategory.id }) }}">{{ userCategory.id }}</a></td>
                <td>{{ userCategory.title }}</td>
                <td>{{ userCategory.description }}</td>
                <td>
                    <a href="{{ path('usercategory_show', { 'id': userCategory.id }) }}" class="btn btn-success">{{ 'View'|trans }}</a>
                    <a href="{{ path('usercategory_edit', { 'id': userCategory.id }) }}" class="btn btn-secondary">{{ 'Edit'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
